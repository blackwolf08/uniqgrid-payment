<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/static/css/index.css" />
    <title>Uniqgrid | Login</title>
  </head>
  <body>
    <div class="root">
      <div class="container">
        <nav class="auth-nav">
          <img class="auth-logo" src="/static/images/logo.svg" alt="" />
        </nav>
        <div class="form-container">
          <form class="auth-form" action="/views/payment-view" method="GET">
            <span class="span">Device Serial : </span
            ><input
              id="device_name"
              onchange="handlechange()"
              class="auth-text"
              type="text"
            />
            <br />
            <span class="span">Registered Phone : </span
            ><input class="auth-number" type="number" />
            <br />
            <button class="auth-button" type="submit">Login</button>
            <p style="width: 100%;text-align:right;padding-right: 30px;">
              Forgot Password?
            </p>
          </form>
        </div>
      </div>
    </div>
    <script>
      function handlechange(e) {
        const input = document.getElementById('device_name').value;
        console.log(input);
        localStorage.setItem('device_name', input);
      }
    </script>
  </body>
</html>
